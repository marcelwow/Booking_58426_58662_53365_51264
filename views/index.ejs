    <!-- Hero Section -->
    <section class="hero-section">
        <div class="container hero-content">
            <div class="row">
                <div class="col-lg-8 mx-auto text-center">
                    <h1 class="display-4 fw-bold mb-3">Znajdź idealny hotel na swój wypoczynek</h1>
                    <p class="lead mb-4">Przeszukaj tysiące hoteli i znajdź najlepsze oferty w każdym zakątku świata</p>
                    
                    <!-- Search Form -->
                    <div class="search-form">
                        <form action="/hotels/search" method="GET">
                            <div class="row g-3">
                                <div class="col-md-5">
                                    <label for="city" class="form-label">Dokąd się wybierasz?</label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="fas fa-map-marker-alt"></i></span>
                                        <input type="text" class="form-control" id="city" name="city" 
                                               placeholder="Miasto, region lub konkretny hotel" required>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <label for="checkInDate" class="form-label">Data przyjazdu</label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="fas fa-calendar-alt"></i></span>
                                        <input type="date" class="form-control" id="checkInDate" name="checkInDate">
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <label for="checkOutDate" class="form-label">Data wyjazdu</label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="fas fa-calendar-alt"></i></span>
                                        <input type="date" class="form-control" id="checkOutDate" name="checkOutDate">
                                    </div>
                                </div>
                                <div class="col-md-1">
                                    <label for="adults" class="form-label">Osoby</label>
                                    <select class="form-control" id="adults" name="adults">
                                        <% for (let i = 1; i <= 10; i++) { %>
                                            <option value="<%= i %>">
                                                <%= i %>
                                            </option>
                                        <% } %>
                                    </select>
                                </div>
                                <div class="col-12 mt-4">
                                    <button type="submit" class="btn btn-primary search-btn">
                                        <i class="fas fa-search me-2"></i>Szukaj hoteli
                                    </button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>

