<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        .search-container {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 60vh;
            display: flex;
            align-items: center;
        }
        .search-card {
            background: white;
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.2);
            padding: 2rem;
        }
        .form-control, .btn {
            border-radius: 8px;
        }
        .popular-destinations {
            background: #f8f9fa;
            border-radius: 10px;
            padding: 1rem;
            margin-top: 1rem;
        }
        .destination-chip {
            display: inline-block;
            background: #e9ecef;
            border: 1px solid #ced4da;
            border-radius: 20px;
            padding: 0.25rem 0.75rem;
            margin: 0.25rem;
            cursor: pointer;
            font-size: 0.875rem;
            transition: all 0.3s;
        }
        .destination-chip:hover {
            background: #667eea;
            color: white;
            border-color: #667eea;
        }
    </style>
</head>
<body>
    <div class="search-container">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-8 col-lg-6">
                    <div class="search-card">
                        <div class="text-center mb-4">
                            <h1 class="h3 text-primary">
                                <i class="fas fa-search me-2"></i>
                                <%= title %>
                            </h1>
                            <p class="text-muted"><%= message %></p>
                        </div>

                        <% if (typeof error !== 'undefined' && error) { %>
                            <div class="alert alert-danger" role="alert">
                                <i class="fas fa-exclamation-triangle me-2"></i>
                                <%= error %>
                            </div>
                        <% } %>

                        <form action="/hotels/search" method="POST">
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label for="cityCode" class="form-label">
                                        <i class="fas fa-map-marker-alt me-1"></i>
                                        Kod miasta *
                                    </label>
                                    <input type="text" 
                                           class="form-control" 
                                           id="cityCode" 
                                           name="cityCode" 
                                           placeholder="np. WAW, PAR, LON"
                                           required
                                           maxlength="3"
                                           style="text-transform: uppercase;">
                                    <div class="form-text">
                                        Używaj kodów IATA (3 litery)
                                    </div>
                                </div>

                                <div class="col-md-6 mb-3">
                                    <label for="adults" class="form-label">
                                        <i class="fas fa-users me-1"></i>
                                        Liczba osób
                                    </label>
                                    <select class="form-control" id="adults" name="adults">
                                        <option value="1">1 osoba</option>
                                        <option value="2" selected>2 osoby</option>
                                        <option value="3">3 osoby</option>
                                        <option value="4">4 osoby</option>
                                        <option value="5">5+ osób</option>
                                    </select>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label for="checkInDate" class="form-label">
                                        <i class="fas fa-calendar-check me-1"></i>
                                        Data zameldowania
                                    </label>
                                    <input type="date" 
                                           class="form-control" 
                                           id="checkInDate" 
                                           name="checkInDate">
                                </div>

                                <div class="col-md-6 mb-3">
                                    <label for="checkOutDate" class="form-label">
                                        <i class="fas fa-calendar-times me-1"></i>
                                        Data wymeldowania
                                    </label>
                                    <input type="date" 
                                           class="form-control" 
                                           id="checkOutDate" 
                                           name="checkOutDate">
                                </div>
                            </div>

                            <div class="d-grid mb-3">
                                <button type="submit" class="btn btn-primary btn-lg">
                                    <i class="fas fa-search me-2"></i>
                                    Wyszukaj hotele
                                </button>
                            </div>
                        </form>

                        <div class="popular-destinations">
                            <h6 class="mb-2">
                                <i class="fas fa-star me-1"></i>
                                Popularne destynacje:
                            </h6>
                            <div id="destinations-container">
                                <span class="destination-chip" data-code="WAW">Warszawa</span>
                                <span class="destination-chip" data-code="KRK">Kraków</span>
                                <span class="destination-chip" data-code="PAR">Paryż</span>
                                <span class="destination-chip" data-code="LON">Londyn</span>
                                <span class="destination-chip" data-code="ROM">Rzym</span>
                                <span class="destination-chip" data-code="BCN">Barcelona</span>
                                <span class="destination-chip" data-code="BER">Berlin</span>
                                <span class="destination-chip" data-code="NYC">Nowy Jork</span>
                            </div>
                        </div>

                        <div class="text-center mt-4">
                            <a href="/" class="btn btn-outline-secondary">
                                <i class="fas fa-home me-2"></i>
                                Powrót do strony głównej
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Auto-wypełnianie dat
        document.addEventListener('DOMContentLoaded', function() {
            const today = new Date();
            const tomorrow = new Date(today);
            tomorrow.setDate(tomorrow.getDate() + 1);
            const dayAfterTomorrow = new Date(today);
            dayAfterTomorrow.setDate(dayAfterTomorrow.getDate() + 2);

            document.getElementById('checkInDate').value = tomorrow.toISOString().split('T')[0];
            document.getElementById('checkOutDate').value = dayAfterTomorrow.toISOString().split('T')[0];

            // Popularne destynacje - klikanie
            document.querySelectorAll('.destination-chip').forEach(chip => {
                chip.addEventListener('click', function() {
                    document.getElementById('cityCode').value = this.dataset.code;
                    // Usunięcie zaznaczenia z innych
                    document.querySelectorAll('.destination-chip').forEach(c => c.classList.remove('bg-primary', 'text-white'));
                    // Zaznaczenie wybranego
                    this.classList.add('bg-primary', 'text-white');
                });
            });

            // Automatyczne konwertowanie na wielkie litery
            document.getElementById('cityCode').addEventListener('input', function() {
                this.value = this.value.toUpperCase();
            });

            // Walidacja dat
            document.getElementById('checkInDate').addEventListener('change', function() {
                const checkInDate = new Date(this.value);
                const checkOutInput = document.getElementById('checkOutDate');
                const minCheckOut = new Date(checkInDate);
                minCheckOut.setDate(minCheckOut.getDate() + 1);
                
                checkOutInput.min = minCheckOut.toISOString().split('T')[0];
                
                if (new Date(checkOutInput.value) <= checkInDate) {
                    checkOutInput.value = minCheckOut.toISOString().split('T')[0];
                }
            });
        });
    </script>
</body>
</html> 